{
  "compilerOptions": {
    "target": "ESNext",
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "incremental": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*.ts", "request.d.ts"],
  "exclude": ["node_modules"]
}
